      "label": "Name",
      "type": "text",
      "is_required": "true"
    },
    {
      "name": "email",
      "label": "Email address",
      "type": "text",
      "is_required": "true",
      "is_email": "true"
    },
    {
      "name": "phone_no",
      "label": "Phone number",
      "type": "text"
    },
    {
      "name": "location",
      "label": "Location",
      "type": "text"
    },
    {
      "name": "how_did_you_hear_about_us",
      "label": "How did you hear about us?",
      "type": "select",
      "options": [
        "google",
        "email message",
        "friends"
      ]
    },
    {
      "name": "comments",
      "label": "Comments",
      "type": "longtext"
    },
    {
      "name": "uploadcv",
