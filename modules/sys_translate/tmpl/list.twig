<h2>{{ tr.get('select_lang_to_edit') }}</h2>

<div id="but_{{ uid }}">
	{% for lang in langs %}
	
		{% if lang != 'it.php' %}
			<button type="button" data-lang="{{ lang|replace({'.php': ''})}}" class="lang btn btn-info"><i class="glyphicon glyphicon-globe"></i> {{ lang|replace({'.php': ''})|capitalize}}</button>
		{% endif %}
	{% endfor %}
	
	<button type="button" class="add-locale btn btn-warning"><i class="glyphicon glyphicon-plus"></i> {{ tr.get('add_locale') }}</button>

</div>

<hr />
<div id="cont_{{ uid }}" class="transl-content"></div>

<script>
	$('#but_{{ uid }} button.lang').on('click', function(){
		$('#cont_{{ uid }}').load('controller.php?obj=sys_translate_ctrl&method=showForm&param[]=' + $(this).data('lang'));
	});
	
	$('#but_{{ uid }} button.add-locale').on('click', function(){
		admin.dialog({
			title: '{{ tr.get('enter_locale') }}',
			html: '<input type="text" placeholder="{{ tr.get('enter_locale') }}" maxlength="2" class="new_locale" />',
			buttons:[
			         {
			        	 text: '{{ tr.get('save')}}',
			        	 click: function(){
			        		 var new_locale = $('.modal input.new_locale').val();
			        		 if (!new_locale){
			        			 admin.message('{{ tr.get('new_locale_cant_be_empty') }}', 'error');
			        			 $('.modal input.new_locale').focus();
			        		 } else {
			        			 $('div.modal').modal('hide').remove();
			        			 $.get('controller.php?obj=sys_translate_ctrl&method=add_locale&param[]=' + new_locale, function(data){
			        				 admin.message(data.text, data.status);
			        				 if (data.status == 'success'){
			        					 admin.tabs.reloadActive();
			        				 }
			        			 }, 'json');
			        		 }
			        	 }
			         },
			         {
			        	 text: '{{ tr.get('close')}}',
			        	 action: 'close'
			         }
			         ]
		});
	});
	
	{% if opened_lang %}
		$('#cont_{{ uid }}').load('controller.php?obj=sys_translate_ctrl&method=showForm&param[]={{ opened_lang }}');
	{% endif %}
</script>
